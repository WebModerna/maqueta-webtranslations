// Formato general
.alerta
	// border-radius 0.2em
	// border-style solid
	// border-width 1px
	// box-shadow -5px 5px 10px $black
	box-sizing border-box
	color $gris_fuerte
	display inline-block
	margin 0.5em auto
	overflow hidden
	transition_comun()
	
	// Alineando los div interiores
	div
		display table-cell
		vertical-align middle


/* Tipos de cuadros de mensajes */

.alerta
	// Precauci贸n
	&-rojo
		border-color $rosa
		.alerta--close
			a
				color $rosa_claro
		.alerta--icono
			background $rosa
	
	// Informaci贸n
	&-azul
		border-color $Celeste
		.alerta--close
			a
				color $Celeste
		.alerta--icono
			background $Celeste
	
	// Atenci贸n
	&-amarillo
		border-color $amarillo
		.alerta--close
			a
				color $amarillo
		.alerta--icono
			background $amarillo			
	
	// Todo ok
	&-verde
		border-color $VerdeClarito
		.alerta--close
			a
				color $VerdeClarito
		.alerta--icono
			background $VerdeClarito
			
	// Una pregunta
	&-gris
		border-color $silver
		.alerta--close
			a
				color $silver
		.alerta--icono
			background $silver

/* Secciones interiores de los cuadros de mensajes */
.alerta	
	&--close
	&--icono
		font-size 3.5em
		padding 0 0.5em
	
	&--close
		border-left 1px solid inherit
		padding 0
		margin 0
		a
			display block
			padding 0.5em
			text-decoration none
			// text-shadow_lindo()
	&--icono
		position relative
		&:after
			content ""
			border 10px solid transparent
			border-left-color $rosa
			position absolute
			top 45%
			right -20px
			
		span
			color $white
			// text-shadow_lindo()
	
	&--mensaje
		padding 0.5em 0.5em 0.5em 1.5em
		h3, h4, h5, h6, p
			font-size 1.5em
			margin 0