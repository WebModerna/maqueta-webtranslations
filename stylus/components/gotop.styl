.gotop
	background url('../img/gotop.png') no-repeat top left
	// background $black url("data:image/png;base64,") no-repeat top left
	border-radius 10em
	bottom 0.5em
	display inline-block
	height 60px
	opacity 0.5
	padding 0
	position fixed
	right 0.5em
	transition all 0.1s ease-in-out
	width 60px
	z-index 10
	
	&-mostrar
		opacity 0.5
	
	&-ocultar
		opacity 0
	
	&:hover
		opacity 1
	
	&:active
		background-color $rosa
			

@media all and (min-width: 40em)
	.gotop
		bottom 1em
		right 1em
		&-ocultar
			bottom -5em

