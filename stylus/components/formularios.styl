// Estilos en del type="file"
form
	text-align left

fieldset
	border-color $silver_claro
	margin-bottom 1em
	max-width 600px
legend
	color $gris_fuerte
	padding-left 0.5em
	padding-right 0.5em

input[type="color"]
input[type="datetime"]
input[type="datetime-local"]
input[type="date"]
input[type="email"]
input[type="number"]
input[type="month"]
input[type="password"]
input[type="search"]
input[type="tel"]
input[type="text"]
input[type="time"]
input[type="url"]
input[type="week"]
textarea
select
	background $nube
	// box-shadow inset 0px 0px 20px $silver
	border none
	box-sizing border-box
	display block
	margin 0.5em auto
	max-width 600px
	outline none
	padding 0.5em
	vertical-align top
	width 100%
	&:focus
		// border 1px solid rgba(82, 168, 236, 0.8)
		box-shadow 0px 0px 5px 1px $Celeste

	
input[type="file"]
	display none

input[type="radio"]
	margin-right 0.1em
		
input[type="text"].captcha
.wpcf7-captchac
	display inline-block
	margin auto
	padding auto
	vertical-align top
	width auto
	
textarea[name="comment"]
	margin-left 0
	width auto

.radio
	display inline-block
	margin 1em 1em 1em 0
	cursor pointer

