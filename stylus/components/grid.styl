/**
 * # Grilla
 *
 * La grilla se genera mediante un mixin.
 * El mixin recibe los siguientes parámetros:
 *   grid(número de columnas, margen(en em, rem, px, %, etc))
 */

$gridColumns ?= 12
$gridGap ?= .5em


grid($gridColumns, $gridGap, $Grid)
grid(columns = 12, margin = 1em)
	&
		display block
		font-size 0

	&-cell
		display inline-block
		font-size 1rem
		margin margin
		width s('calc(%s - %s)', 100% / columns, margin * 2)

	for col in 1..columns
		&-cell--size{col}
			width s('calc(%s - %s)', 100% / columns * col, margin * 2)

.Grid
	grid(12, 0.5em)