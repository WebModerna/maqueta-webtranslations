	.heading
		h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
			font-size 1.7em*/
		

.heading-item
	padding 0.2em
	position relative
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
		color $white
		text-align center
	
	&.verde
		background $VerdeClarito
	
	&.azul
		background $azul_claro
	
	&.gris
		background $gris
		
	&.google
		background $google
	
	&.negro
		background $black
	
	&.morado
		background $morado_claro
	
	&.naranja
		background $NaranjaLadrillo
		