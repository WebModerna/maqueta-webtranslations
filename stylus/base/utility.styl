// Clases utilitarias

.is-hidden
	display none !important
	

// Alineaciones t√≠picas de WordPress en el editor de contenidos.
.alignright
a .alignright 
	float right
	margin-left 1em
	width 100%


.alignleft
a .alignleft 
	float left
	margin-right 1em
	width 100%


.aligncenter
a .aligncenter 
	display block
	margin-right auto
	margin-left auto
	text-align center
	width 100%
	
.centrado
	margin-left auto
	margin-right auto
	text-align center
	

.clearboth
	clear both
	
.error_404
	background $black
	color $ladrillo
	font-size 5em
	
.justify
	text-align justify
.left
	text-align left	
.right
	text-align right
// Listas horizontales separadas por una barra
.ul_horizontal
	li
		display inline-block
	li + li
		border-left 1px dotted $silver
		