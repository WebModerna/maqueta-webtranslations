// Fondos o backgrounds de algunas p√°ginas
html
	height 100%
body
	height 100%
	min-height 100%
	
.header, main, footer
	z-index 3
	
.fondo
	background url("../img/ultrabook.jpg") top center no-repeat fixed
	background-size auto 100%
	background-size cover
	min-height 100%
	position relative
	z-index 1
	&:before
		background rgba($black_puro, 0.5)
		content ""
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
		
		
	


.fondo_color
	background $white
	
