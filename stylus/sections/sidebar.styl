/*
Las Sidebar Horizontales
*/

.sidebar
	background $black
	color $gray
	overflow hidden
	padding-left 0.5em
	padding-right 0.5em
	position relative

	// a
	// 	color $nube

// Estilos generales
.widget
	margin-bottom 1em
	
	a
		// color inherit
		text-decoration none

	address
		font-style normal
	
	figure
		float left
		margin 0 1em 1em 0
		img
			width 100%

	header
		border-bottom 3px solid $ladrillo
		margin-bottom 0.5em
		h2, h3, h4, h5, h6
			color inherit
			font-size 1.3em
			margin-bottom 1em
	
	ul
		margin 0
		padding 0
		li
			display block
			padding 0.5em 0
			list-style none
			a
				*display inline
				display inline-block
		li + li
			border-top 1px dotted $silver_claro
			
@media all and (min-width:40em)
	.sidebar
		padding-left 0
		padding-right 0
	
	.widget--sidebar--footer
		display block
		float left
		padding-left 1em
		padding-right 1em
		vertical-align top
		width 50%
		
@media all and (min-width:70em)
	.widget--sidebar--footer
		width 25%