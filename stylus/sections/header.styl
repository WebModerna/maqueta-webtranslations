// El encabezado principal de la web
.header
	box-sizing border-box
	overflow hidden
	text-align center

	
.titulo_home
	color $white
	display inline-block
	margin auto
	font-size 1.1em
	max-width 300px
	h1
		border-bottom 1px solid $white
		font-weight lighter
		font-size 2.6em
		letter-spacing -3px
		margin 0 0 0.2em 0
		padding 0 0 0.4em 0
		line-height 95%
		
.boton_home
	.boton
		font-size 1.2em
		
		

@media all and (min-width:50em)
	.header
		position relative
	
	.titulo_home
		font-size 1.4em
		h1
			font-size 2.5em
			line-height 90%
		
	

